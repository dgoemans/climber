{
    // See https://go.microsoft.com/fwlink/?LinkId=733558
    // for the documentation about the tasks.json format
    "version": "2.0.0",
    "tasks": [
        {
            "taskName": "Grunt",
            "command": "grunt",
            "isShellCommand": true,
            "args": ["--no-color"],
            "showOutput": "always",
            "isBuildCommand": true
        },
        {
            "taskName": "TypeScript",
            "command": "tscgrunt",
            "isShellCommand": true,
            "args": ["-p", "."],
            "showOutput": "always",
            "problemMatcher": "$tsc"

        }
    ]
}